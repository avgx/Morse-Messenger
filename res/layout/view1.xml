<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:text="International Morse Code"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center" android:textSize="20dip" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ListView android:layout_width="150dip"
			android:layout_height="fill_parent" android:padding="10dp"
			android:id="@+id/android:list" />
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:layout_height="fill_parent">
				<TextView android:text="Notes:" android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
				<TextView android:text="  A dash is equal to three(3) dots."
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:paddingLeft="5dip" android:paddingBottom="5dip" />

				<TextView
					android:text="  The space between parts of the same letter is equal to one dot."
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:paddingLeft="5dip" android:paddingBottom="5dip" />

				<TextView
					android:text="  The space between two letters is equal to three(3) dots."
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:paddingLeft="5dip" android:paddingBottom="5dip" />

				<TextView android:text="  The space between two words is equal to zeven(7) dots."
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:paddingLeft="5dip" android:paddingBottom="5dip" />

			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>